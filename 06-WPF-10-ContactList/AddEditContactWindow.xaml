<Window x:Class="ContactList.AddEditContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Contact" Height="330" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="First Name"/>
        <TextBox Grid.Row="1" x:Name="firstNameTextBox"/>

        <Label Grid.Row="2" Content="Last Name"/>
        <TextBox Grid.Row="3" x:Name="lastNameTextBox"/>

        <Label Grid.Row="4" Content="Nickname"/>
        <TextBox Grid.Row="5" x:Name="nicknameTextBox"/>

        <Label Grid.Row="6" Content="Phone"/>
        <TextBox Grid.Row="7" x:Name="phoneTextBox"/>

        <Label Grid.Row="8" Content="Email"/>
        <TextBox Grid.Row="9" x:Name="emailTextBox"/>

        <Button Grid.Row="10" Content="Save" Click="SaveButton_Click" HorizontalAlignment="Right" Margin="0 10 0 0"/>
    </Grid>
</Window>
