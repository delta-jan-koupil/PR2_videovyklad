<Window x:Class="_06_WPF_02_Move_text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_06_WPF_02_Move_text"
        mc:Ignorable="d"
        Title="Move text app" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="InputTB" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="10,5,5,5"  TextChanged="UpdateOutput"/>
        
        <TextBlock x:Name="OutputBlock" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="120"/>

        <Button Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="47" Click="Button_Click" FontFamily="Arial Black" FontSize="18"/>

        <StackPanel Orientation="Horizontal">
            <Button Content="A"/>
            <Button Content="B"/>
            <Button Content="C"/>
            <Button Content="D"/>
            <Button Content="E"/>
        </StackPanel>

    </StackPanel>
</Window>
